<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <gradient
                android:type="linear"
                android:centerX="5%"
                android:startColor="@color/program_background"
                android:centerColor="@color/md_black_1000"
                android:endColor="@color/program_background"
                android:angle="90"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <gradient
                android:type="linear"
                android:centerX="5%"
                android:startColor="@color/program_background"
                android:centerColor="@color/md_black_1000"
                android:endColor="@color/program_background"
                android:angle="90"/>
        </shape>
    </item>

    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <gradient
                android:type="linear"
                android:centerX="4%"
                android:startColor="@color/program_background"
                android:centerColor="@color/program_background"
                android:endColor="@color/program_background"
                android:angle="90"/>

        </shape>
    </item>
</selector>